@model IEnumerable<ServicesCourse.Models.History>

@{
    ViewData["Title"] = "История посещений";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>История посещений</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccessTime)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Service.ServiceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccessTime)
                </td>
                <td>
                    @Html.ActionLink("Подробнее", "Details", new { login = item.Login, accessTime = item.AccessTime},
                new { @class = "text-decoration-none text-success"})
                </td>
            </tr>
        }
    </tbody>
</table>
