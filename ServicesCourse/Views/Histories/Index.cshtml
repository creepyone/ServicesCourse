@model IEnumerable<ServicesCourse.Models.History>

@{
    ViewData["Title"] = "История посещений";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Отчёты</h1>
<hr />

<div class="container">
    <ul class="list-group list-group-flush">
        <li class="list-group-item"><a class="text-decoration-none" asp-controller="Histories" asp-action="ActiveServicesToExcel">Список активных сервисов системы</a></li>
        <li class="list-group-item"><a class="text-decoration-none" asp-controller="Histories" asp-action="ActiveServicesBySectionToExcel">Количество активных сервисов по разделам</a></li>
        <li class="list-group-item"><a class="text-decoration-none" asp-controller="Histories" asp-action="AccessHistoryToExcel">Информация о посещениях</a></li>
        <li class="list-group-item"><a class="text-decoration-none" asp-controller="Histories" asp-action="TopAccessServicesToExcel">5 самых посещаемых сервисов</a></li>
        <li class="list-group-item"><a class="text-decoration-none" asp-controller="Histories" asp-action="NotVisitedServicesToExcel">Список непосещенных сегодня сервисов</a></li>
    </ul>
</div>

<hr />

<h1>История посещений</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccessTime)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Service.ServiceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccessTime)
                </td>
                <td>
                    @Html.ActionLink("Подробнее", "Details", new { login = item.Login, accessTime = item.AccessTime},
                new { @class = "text-decoration-none text-success"})
                </td>
            </tr>
        }
    </tbody>
</table>
