@model ServicesCourse.Models.Section

@{
    ViewData["Title"] = "Удаление раздела";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удаление раздела</h1>

<h3>Вы уверены, что хотите удалить этот раздел?</h3>
<div>
    <h4>@Html.DisplayFor(model => model.SectionName)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SectionName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SectionName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a class="text-decoration-none" asp-action="Index">Назад к списку</a>
    </form>
</div>
