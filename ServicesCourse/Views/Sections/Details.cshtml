@model ServicesCourse.Models.Section

@{
    ViewData["Title"] = "Информация о разделе";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Информация о разделе</h1>

<div>
    <h4>@Html.DisplayFor(model => model.SectionName)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SectionName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SectionName)
        </dd>
    </dl>
</div>
<div>
    <a class="text-decoration-none" asp-action="Edit" asp-route-id="@Model.Id">Изменить</a> |
    <a class="text-decoration-none" asp-action="Index">К списку разделов</a>
</div>

<hr />
<div class="container">
    <h3>Информация о подразделах и сервисах</h3>
    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Подраздел</th>
                <th></th>
                <th>Сервисы</th>
            </tr>
        </thead>
        @foreach (Subsection subsection in Model.Subsections)
        {
            <tr>
                <td style="vertical-align: middle; width: 40%">@subsection.SubscetionName</td>
                <td style="text-align: center; vertical-align: middle; width: 10%"><a class="text-success text-decoration-none " asp-controller="Subsections" asp-action="Details" asp-route-id="@subsection.Id">Подробнее</a></td>
                <td class="p-0">
                        <table class="table table-striped table-bordered m-0">
                            @foreach (Service service in subsection.Services)
                            {
                                <tr>
                                    <td style="width: 80%">@service.ServiceName</td>
                                    <td  style="text-align: center"><a class="text-success text-decoration-none " asp-controller="Services" asp-action="Details" asp-route-id="@service.Id">Подробнее</a></td>
                                </tr>
                            }
                        </table>
                </td>
            </tr>
        }
    </table>
</div>