@model ServicesCourse.Models.Service

@{
    ViewData["Title"] = "Удаление сервиса";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удаление сервиса</h1>

<h3>Вы уверены что хотите удалить сервис?</h3>
<div>
    <h4>@Html.DisplayNameFor(model => model.ServiceName)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServiceName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AboutService)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AboutService)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Version)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Version)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActivityStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActivityStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subsection)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subsection.SubscetionName)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> 
        <a class="text-decoration-none" asp-action="Index">Назад к списку</a>
    </form>
</div>
