        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServiceName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AboutService)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AboutService)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Version)
