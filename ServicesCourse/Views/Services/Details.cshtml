        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Version)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActivityStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActivityStatus)
