@model ServicesCourse.Models.Subsection

@{
    ViewData["Title"] = "Создание нового подраздела";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Создание нового подраздела</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group p-2">
                <label asp-for="SubscetionName" class="control-label"></label>
                <input asp-for="SubscetionName" class="form-control" />
                <span asp-validation-for="SubscetionName" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="SectionId" class="control-label"></label>
                <select asp-for="SectionId" class ="form-control" asp-items="ViewBag.SectionId"></select>
            </div>
            <div class="form-group p-2">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="text-decoration-none  p-2" asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
