@model ServicesCourse.Models.Subsection

@{
    ViewData["Title"] = "Информация о подразделе";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Информация о подразделе</h1>

<div>
    <h4>@Html.DisplayFor(model => model.SubscetionName)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SubscetionName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubscetionName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Section.SectionName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Section.SectionName)
        </dd>
    </dl>
</div>
<div>
    <a class="text-decoration-none" asp-action="Edit" asp-route-id="@Model.Id">Изменить</a> |
    <a class="text-decoration-none" asp-action="Index">К списку подразделов</a>
</div>

<hr>
<div class="container">
    <h3>Информация о сервисах</h3>
    <table class="table table-striped">
        @foreach (Service service in Model.Services)
        {
            <tr>
                <td>@service.ServiceName</td>
                <td style="text-align: right"><a class="text-success text-decoration-none " asp-controller="Services" asp-action="Details" asp-route-id="@service.Id">Подробнее </a> </td>
            </tr>
        }
    </table>
</div>