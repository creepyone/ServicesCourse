@model ServicesCourse.Models.Subsection

@{
    ViewData["Title"] = "Изменение информации о подразделе";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Изменение данных о подразделе</h1>

<h4>@Html.DisplayFor(m => m.SubscetionName)</h4>
<hr />
<div class="row">
    <div class="col-md-4 p-2">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group p-2">
                <label asp-for="SubscetionName" class="control-label"></label>
                <input asp-for="SubscetionName" class="form-control" />
                <span asp-validation-for="SubscetionName" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="SectionId" class="control-label"></label>
                <select asp-for="SectionId" class="form-control" asp-items="ViewBag.SectionId"></select>
                <span asp-validation-for="SectionId" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="text-decoration-none" asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
