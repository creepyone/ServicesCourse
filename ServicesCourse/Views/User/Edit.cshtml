@model ServicesCourse.Models.UserProfile

@{
    ViewData["Title"] = "Изменение данных о пользователе";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Изменение данных пользователя</h1>

<h4>@Html.DisplayFor(model => model.Login)</h4>
<hr />
<div class="row container">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Login" />
            <div class="form-group p-2">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="Patronymic" class="control-label"></label>
                <input asp-for="Patronymic" class="form-control" />
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="SexId" class="control-label">Пол</label>
                <select asp-for="SexId" class="form-control" asp-items="ViewBag.SexId"></select>
                <span asp-validation-for="SexId" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
        <a asp-action="Index" class="text-decoration-none p-2">На главную</a>
    </div>
</div>





@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
