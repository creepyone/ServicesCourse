@model ServicesCourse.Models.User

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удаление</h1>

<h3>Вы уверены, что хотите удалить данные об этом пользователе?</h3>
<div>
    <h4>@Html.DisplayFor(model => model.Login)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Пароль
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class="col-sm-2">
            Активен
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActivityStatus)
        </dd>
        <dt class="col-sm-2">
            Тип пользователя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserType.UserTypeName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Login" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a class="text-decoration-none" asp-action="Index">Назад к списку</a>
    </form>
</div>
