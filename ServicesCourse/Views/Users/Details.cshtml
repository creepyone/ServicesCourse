@model ServicesCourse.Models.User

@{
    ViewData["Title"] = "Информация об учетной записи пользователя";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Информация об учетной записи пользователя</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Login)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActivityStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActivityStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserType.UserTypeName)
        </dd>
    </dl>
</div>

<div>
    <a class="text-decoration-none" asp-action="Edit" asp-route-id="@Model.Login">Изменить</a> |
    <a class="text-decoration-none" asp-action="Index">Назад к списку</a>
</div>

<hr />
<div class="container">
<h3>Последние 5 посещений</h3>
    <table class="table">
     <thead class="thead-light">
         <tr>
             <th scope="col">Название сервиса</th>
             <th scope="col">Время посещения</th>
         </tr>
     </thead>
        @foreach (History record in Model.HistoryRecords.OrderBy(x => x.AccessTime).Take(5))
        {
            <tr>
                <td>@record.Service.ServiceName</td>
                <td>@record.AccessTime</td>
            </tr>
        }
    </table>
</div>

